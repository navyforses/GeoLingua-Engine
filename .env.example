# ===========================================
# GeoLingua Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# Supabase Configuration
# Get these from: https://supabase.com/dashboard
# -------------------------------------------
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# -------------------------------------------
# Stripe Configuration
# Get these from: https://dashboard.stripe.com/apikeys
# -------------------------------------------
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# -------------------------------------------
# Database Configuration
# PostgreSQL connection string
# -------------------------------------------
DATABASE_URL=postgresql://user:password@host:5432/geolingua

# -------------------------------------------
# Server Configuration
# -------------------------------------------
PORT=5000
NODE_ENV=development

# -------------------------------------------
# TURN Server (for WebRTC)
# Get free account at: https://www.metered.ca/
# -------------------------------------------
TURN_SERVER_URL=turn:your-turn-server.metered.ca:443
TURN_SERVER_USERNAME=your-username
TURN_SERVER_CREDENTIAL=your-credential

# -------------------------------------------
# Optional: Expo Push Notifications
# -------------------------------------------
EXPO_ACCESS_TOKEN=your-expo-access-token
